<Window x:Class="Library.Loginpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Loginpage" Height="450" Width="800">
    <Grid Background="DarkGray">
        <TextBox Name="UserName" HorizontalAlignment="Left" Height="43" Margin="95,135,0,0" TextWrapping="Wrap" Text="UserName" FontSize="30" Foreground="Brown" VerticalAlignment="Top" Width="165"/>
        <TextBox Name="Password" HorizontalAlignment="Left" Height="45" Margin="95,209,0,0" TextWrapping="Wrap" Text="Password" FontSize="30" Foreground="Brown" VerticalAlignment="Top" Width="165"/>
        <TextBox Name="uName" HorizontalAlignment="Left" Height="43" Margin="304,135,0,0" TextWrapping="Wrap" Text="" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="184"/>
        <PasswordBox Name="uPass" HorizontalAlignment="Left" Margin="304,209,0,0" VerticalAlignment="Top" Width="184" Height="45"/>
        <Label Content="LogIn" FontSize="30" FontFamily="Ravie" Foreground="PaleGreen" HorizontalAlignment="Left" Margin="292,52,0,0" VerticalAlignment="Top" Width="123" Height="48"/>
        <Button Content="Login" FontSize="30" Foreground="Orange" HorizontalAlignment="Left" Margin="249,297,0,0" VerticalAlignment="Top" Width="178" Height="50" Click="Button_Click_1"/>
        <Label Name="userError" Content="" FontSize="20" Foreground="Red" HorizontalAlignment="Left" Margin="538,135,0,0" VerticalAlignment="Top" Width="234" Height="43"/>
        <Label Name="passError" Content="" FontSize="20" Foreground="Red" HorizontalAlignment="Left" Margin="538,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.496,-0.407" Width="215" Height="45"/>

    </Grid>
</Window>
