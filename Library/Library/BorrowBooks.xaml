<Window x:Class="Library.BorrowBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="BorrowBooks" Height="450" Width="800">
    <Grid Background="DarkGray">
    <ComboBox x:Name="combo4" FontSize="20" HorizontalAlignment="Left" Margin="561,56,0,0" VerticalAlignment="Top" Width="231" Height="44">
        <ComboBoxItem IsSelected="True"  Name="Horror">Horror</ComboBoxItem>
        <ComboBoxItem Name="Biography">Biography</ComboBoxItem>
        <ComboBoxItem Name="Documentary">Documentary</ComboBoxItem>
        <ComboBoxItem Name="Thriller">Thriller</ComboBoxItem>
        <ComboBoxItem Name="Comedy">Comedy</ComboBoxItem>
        <ComboBoxItem Name="Poem">Poem</ComboBoxItem>
        <ComboBoxItem Name="SciFi">Sci-Fi</ComboBoxItem>
        <ComboBoxItem Name="Mystry">Mystry</ComboBoxItem>
    </ComboBox>
    <Label Content="Select category" FontSize="20" FontFamily="Ravie" Foreground="Brown" HorizontalAlignment="Left" Margin="561,10,0,0" VerticalAlignment="Top" Width="231" Height="41"/>
    <Button Content="Show" FontSize="30" Foreground="Purple" HorizontalAlignment="Left" Margin="561,105,0,0" VerticalAlignment="Top" Width="221" Height="43" Click="Button_Click"/>
    <TextBox Name="ubna"  HorizontalAlignment="Left" Height="50" Margin="561,197,0,0" TextWrapping="Wrap" Text="" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="231"/>
    <DataGrid x:Name="dta" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="545"/>
    <Label Content="Enter the book Name" FontSize="20" Foreground="Red" HorizontalAlignment="Left" Margin="561,153,0,0" VerticalAlignment="Top" Width="221" Height="39"/>
    <Label Name="boerror" Content="" FontSize="20" Foreground="Red" HorizontalAlignment="Left" Margin="561,252,0,0" VerticalAlignment="Top" Width="221" Height="42"/>
    <Button Content="Click to borrow" FontSize="30" Foreground="Purple" HorizontalAlignment="Left" Margin="561,294,0,0" VerticalAlignment="Top" Width="221" Height="51" Click="Button_Click_1"/>
    <Button Content="Previous page" FontSize="30" Foreground="Purple" HorizontalAlignment="Left" Margin="561,367,0,0" VerticalAlignment="Top" Width="221" Height="52" Click="Button_Click_2"/>
    </Grid>
</Window>

