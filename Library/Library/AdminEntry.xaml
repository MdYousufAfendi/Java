<Window x:Class="Library.AdminEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AdminEntry" Height="450" Width="800">
    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="787*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Enter the book information" FontSize="30" FontFamily="Times New Roman" Foreground="Purple" HorizontalAlignment="Left" Margin="228,10,0,0" VerticalAlignment="Top" Width="338" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="25,60,0,0" TextWrapping="Wrap" Text="Book Name" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="139" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="25,117,0,0" TextWrapping="Wrap" Text="Category" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="139" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="25,173,0,0" TextWrapping="Wrap" Text="Published Date" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="139" RenderTransformOrigin="0.019,0.4" Grid.Column="1" />
        <TextBox Name="Bn" HorizontalAlignment="Left" Height="40" Margin="209,60,0,0" TextWrapping="Wrap" Text="" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="283" Grid.Column="1"/>
        <TextBox Name="Pd" HorizontalAlignment="Left" Height="38" Margin="209,173,0,0" TextWrapping="Wrap" Text="" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="283" Grid.Column="1"/>
        <Button Content="Saved" FontSize="30" Foreground="DarkViolet" HorizontalAlignment="Left" Margin="386,355,0,0" VerticalAlignment="Top" Width="134" Height="54" Click="Button_Click" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Left" Height="43" Margin="25,228,0,0" TextWrapping="Wrap" Text="Author's Name" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="139" Grid.Column="1"/>
        <TextBox Name="An" HorizontalAlignment="Left" Height="43" Margin="209,228,0,0" TextWrapping="Wrap" Text="" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="283" Grid.Column="1"/>
        <Label Name="Bnerr" Content="" FontSize="20" Foreground="Red" Grid.Column="1" HorizontalAlignment="Left" Margin="528,60,0,0" VerticalAlignment="Top" Width="249" Height="40"/>
        <Label Name="Pderr" Content="" FontSize="20" Foreground="Red" Grid.Column="1" HorizontalAlignment="Left" Margin="528,173,0,0" VerticalAlignment="Top" Width="249" Height="38"/>
        <Label Name="Anerr" Content="" FontSize="20" Foreground="Red" Grid.Column="1" HorizontalAlignment="Left" Margin="528,228,0,0" VerticalAlignment="Top" Width="238" Height="43"/>
        <Button Content="Previous" FontSize="30" Foreground="DarkViolet" Grid.Column="1" HorizontalAlignment="Left" Margin="151,355,0,0" VerticalAlignment="Top" Width="207" Height="54" Click="Button_Click_1"/>
        <ComboBox x:Name="combobox1" Grid.Column="1" HorizontalAlignment="Left" Margin="209,117,0,0" VerticalAlignment="Top" Width="283" Height="40">
            <ComboBoxItem IsSelected="True" Name="Horror">Horror</ComboBoxItem>
            <ComboBoxItem Name="Biography">Biography</ComboBoxItem>
            <ComboBoxItem Name="Documentary">Documentary</ComboBoxItem>
            <ComboBoxItem Name="Thriller">Thriller</ComboBoxItem>
            <ComboBoxItem Name="Comedy">Comedy</ComboBoxItem>
            <ComboBoxItem Name="Poem">Poem</ComboBoxItem>
            <ComboBoxItem Name="SciFi">Sci-Fi</ComboBoxItem>
            <ComboBoxItem Name="Mystry">Mystry</ComboBoxItem>
        </ComboBox>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="42" Margin="25,287,0,0" TextWrapping="Wrap" Text="Book's price" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="139"/>
        <TextBox Name="ubp" Grid.Column="1" HorizontalAlignment="Left" Height="42" Margin="209,287,0,0" TextWrapping="Wrap" Text="" FontSize="20" Foreground="Indigo" VerticalAlignment="Top" Width="283"/>
        <Label Name="ubperr" Content="" FontSize="20" Foreground="Red" Grid.Column="1" HorizontalAlignment="Left" Margin="528,287,0,0" VerticalAlignment="Top" Width="238" Height="42"/>

    </Grid>
</Window>
